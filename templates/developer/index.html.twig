{% extends 'base.html.twig' %}

{% block title %}Developer index
{% endblock %}

{% block body %}
	<h1 class="text-dark text-center mt-5 mb-5" >Developers List</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Image</th>
				<th>FullName</th>
				<th>AboutMe</th>
				<th>Email</th>
				<th>Adress</th>
				<th>Speciality</th>
				<th>BirthDate</th>
				<th>YearsExp</th>
				<th>Work Style Preferred</th>
				<th>Languages</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for developer in developers %}
				<tr>
					<td class="align-middle">{{ developer.id }}</td>
					<td class="align-middle"><img src="{{ asset('photos/') ~ developer.File }}" width=80 height=60></td>
					<td class="align-middle">{{ developer.FullName }}</td>
					<td class="align-middle">{{ developer.Email }}</td>
					<td class="align-middle">{{ developer.Adress }}</td>
					<td class="align-middle">{{ developer.AboutMe }}</td>
					<td class="align-middle">{{ developer.Speciality }}</td>
					<td class="align-middle">{{ developer.BirthDate ? developer.BirthDate|date('Y-m-d') : '' }}</td>
					<td class="align-middle">{{ developer.YearsExp }}</td>
					<td class="align-middle">{{ developer.WorkStyle }}</td>
					<td class="align-middle">
						{% for lang in developer.Languages %}
							{{ lang }}
						</br>
					{% endfor %}
					</td>
					
					<td  class="align-middle">
						<a href="{{ path('app_developer_show', {'id': developer.id}) }}" title="Show More Details" class="btn btn-outline-secondary">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots" viewBox="0 0 16 16">
  							<path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
							</svg>
						</a>
						<a href="{{ path('app_developer_edit', {'id': developer.id}) }}" title="Edit" class="btn badge-info">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
						</a>
						<a href="{{ path('app_developer_delete', {'id': developer.id}) }}" title="Delete" class="btn badge-danger">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
 							<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
							</svg>
						</a>						
					</td>
			</tr>

        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

	<div style="text-align: center;display: block;width: 100%" >  
		<a href="{{ path('app_developer_new') }}" class="badge badge-primary" style="font-size:25px;padding: 10px 10px">Create new</a>
	</div>
    
{% endblock %}

