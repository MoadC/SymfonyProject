{% extends 'base.html.twig' %}

{% block title %}Edit Developer{% endblock %}

{% block body %}
    <h1 class="text-primary text-center mt-5" >Edit Developer</h1>
    <div class="d-flex align-items-center justify-content-center"  style="margin-top:50px;">
    <table width="35%" text-align="center">
	<form action="{{path('app_developer_edit', {id: developer.Id})}}" enctype="multipart/form-data" method="post">
		<tr align="center">
			<td>FullName</td>
			<td>{{form_widget(form.FullName)}}</td>
		</tr>
		<tr align="center">
			<td>BirthDate</td>
			<td>{{form_widget(form.BirthDate)}}</td>
		</tr>
		<tr align="center">
			<td>Speciality</td>
			<td>{{form_widget(form.Speciality)}}</td>
		</tr>
		<tr align="center">
			<td>AboutMe</td>
			<td>{{form_widget(form.AboutMe)}}</td>
		</tr>
		<tr align="center">
			<td>Adress</td>
			<td>{{form_widget(form.Adress)}}</td>
		</tr>
		<tr align="center">
			<td>Email</td>
			<td>{{form_widget(form.Email)}}</td>
		</tr>
		<tr align="center">
			<td>Years Of Expereience</td>
			<td>{{form_widget(form.YearsExp)}}</td>
		</tr>
		<tr align="center">
			<td>Work Style Preferred</td>
			<td>{{form_widget(form.WorkStyle)}}</td>
		</tr>
		<tr align="center">
			<td>Languages</td>
			<td>
				{{form_widget(form.languages)}}</td>
		</tr>
		<tr align="center">
			<td>File</td>
			<td>
				{{form_widget(form.File)}}</td>
		</tr>
		<tr align="center">
			<td><input type="reset" value="Annuler" class="btn btn-danger"></td>
			<td><input type="hidden" name="token" value="{{ csrf_token('app_developer_edit') }}">
				<input type="submit" value="Update" class="btn btn-info">
			</td>
		</tr>
		{{form_widget(form)}}
	</form>
    </table>
    </div>
    <div class="d-flex justify-content-center mt-3"> 
    <a href="{{ path('app_developer_index') }}" class='btn btn-outline-secondary'><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-90deg-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M1.146 4.854a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 4H12.5A2.5 2.5 0 0 1 15 6.5v8a.5.5 0 0 1-1 0v-8A1.5 1.5 0 0 0 12.5 5H2.707l3.147 3.146a.5.5 0 1 1-.708.708l-4-4z"/>
                </svg> Back to list</a>
</div>

    
{% endblock %}
